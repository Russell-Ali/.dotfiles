# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# media control
XF86AudioRaiseVolume
	pamixer --allow-boost --set-limit 120 -i 5; pkill -RTMIN+1 dwmblocks

XF86AudioLowerVolume
	pamixer --allow-boost --set-limit 120 -d 5; pkill -RTMIN+1 dwmblocks

XF86AudioMute
	pamixer -t; pkill -RTMIN+1 dwmblocks

# brightness control
XF86MonBrightnessUp
	light -A 10%; pkill -RTMIN+2 dwmblocks
XF86MonBrightnessDown
	light -U 10%; pkill -RTMIN+2 dwmblocks

# update keyboard layout @bar
alt + space
    pkill -RTMIN+3 dwmblocks

# calculator
XF86Calculator
	galculator
	
# lockscreen
super + x
	slock

# drun promt for power menu
super + shift + x
    powermenu

# browser (firefox)
super + r
	firefox

# browser (chromium)
super + c
	chromium

# filemanager (pcmanfm)
super + e
	pcmanfm

# clipboard manager (clipmenu)
super + v
	clipmenu -c

# full and regional screenshot with maim
super + {shift , alt} + s
    maim -u ~/Pictures/Screenshot-$(date +%s).png {_,-sm 10};
